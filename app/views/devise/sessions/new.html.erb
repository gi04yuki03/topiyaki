<div class="box">
  <div class="box2">
    <div class="box-inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
        <h4>ログイン</h4>
        <div class="box-email">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "必須" %>
        </div>
        <div class="box-password">
          <div class="a-row">
            <div class="column-left">
              <%= f.label :password, "パスワード" %>
            </div>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "必須" %>
        </div>
        <div class="box2-login">
          <%= f.submit "ログイン" %>
        </div>
        <div>
          <% if devise_mapping.rememberable? %>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember, "ログインしたままにする", class: "login-btn" %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div>
        <%= link_to "新しいアカウントを作成", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>

