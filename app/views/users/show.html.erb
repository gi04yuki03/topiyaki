<div class="user-main">
  <div class="user-left">
    <div class="user-left-inner">
      <div class="user-image">
        <% if @user.profile_image.present? %>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image.jpg'%>
        <% end %>
      </div>
      <div class="user-image-edit">
        <%= link_to 'プロフィールを編集する', edit_user_path(@user.id) %>
      </div>
      <div class="user-link">
        <ul class>
          <li>
            <%= link_to "レシピ一覧", recipes_path %>
          </li>
          <li>
            <%= link_to "レシピ登録", new_recipe_path %>
          </li>
          <li>
            <%= link_to "マイページ", user_path(current_user.id) %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="user-right">
    <h1>マイページ</h1>
    <div class="user-content">
      <div class="user-content-left">
        <div class="user-name">
          <p>ユーザー名</p>
          <p class="border"><%= @user.name %></p>
        </div>
        <div class="user-email">
          <p>メールアドレス</p>
          <p class="border"><%= @user.email %></>
        </div>
      </div>
      <div class="user-content-right">
        <div class="user-profile">
          <p>自己紹介</p>
          <p class="border"><%= @user.profile %></p>
        </div>
        <div class="user-processing">
          <%= link_to 'プロフィールを編集する', edit_user_path(@user.id) %><br>
          <%= link_to 'アカウントを削除する', user_path(@user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </div>
      </div>
    </div>
    <div class="user-recipe">
      <div class="user-recipe-border">
        <div class="user-recipe-inner">
          <p><%= @user.name %>さんが投稿したレシピ　</p>
          <% if @posts_recipes.any? %>
          <ul>
            <% @posts_recipes.each do |recipe| %>
              <%= link_to recipes_path do %>
              <li><%= recipe.title %></li>
              <% end %>
            <% end %>
          </ul>
          <% else %>
            <p class="notthing"><%= "#{@user.name}さんの投稿はありません。" %></p>
          <% end %>
        </div>
      </div>
      <div class="user-recipe-border">
        <div class="user-recipe-inner">
          <p><%= @user.name %>さんのお気に入りレシピ</p>
          <% if @favorites.any? %>
          <ul>
            <% @favorites.each do |favorite| %>
              <%= link_to recipes_path do %>
              <li><%= favorite.recipe.title %></li>
              <% end %>
            <% end %>
          </ul>
          <% else %>
            <p class="notthing"><%= "#{@user.name}さんのお気に入りはありません。" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/expand_less" %>
